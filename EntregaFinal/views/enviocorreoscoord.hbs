{{>header}}

  <div class="container">

   {{#if flagcurso}}
    <div class="card o-hidden border-0 shadow-lg mt-3">
      <div class="card-body p-0 ">
        <!-- Nested Row within Card Body -->
        <div class="row justify-content-center">
          
{{!-- 
         {{#unless flagEstudianteInscrito}}
