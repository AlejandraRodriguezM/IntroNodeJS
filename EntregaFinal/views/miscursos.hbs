{{>header}}

<div id="page-top" >

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Begin Page Content -->
        <div class="form-group">
          <div class="container-fluid">
            
            <!-- <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p> -->

            <!-- DataTales Example -->
            <div class="card shadow mb-4 mt-3">
              <div class="card-header py-3">
                <h5 class="m-0 font-weight-bold text-primary">Cursos donde estás inscrito</h6>
              </div>
              <div class="card-body">
                
                <div class="table-responsive">
                  
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>Nombre</th>
                          <th>Descripción</th>
                          <th>Valor</th>
                          <th>Modalidad</th>
                          <th>Intensidad</th>
                        </tr>
                      </thead>
                     
                      <tbody>
                      
                      {{#each listCursos}}
                        
                        <tr>
                          <td>{{nombre}}</td>
                          <td>{{descripcion}}</td>
                          <td>$ {{valor}}</td>
                          <td>{{#if modalidad}}{{modalidad}}{{else}}- {{/if}}</td>
                          <td>{{#if intensidad}}{{intensidad}}{{else}}- {{/if}}</td>
                        </tr>
                        {{/each}} 
                      
                      </tbody>
                    </table>
                 {{!--  <button type="submit" class="btn btn-primary btn-block mt-5">REALIZAR PEDIDO</button> --}}
                
                </div>

                 
            </div>

          </div>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

</div>

{{>footer}}