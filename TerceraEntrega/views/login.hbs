{{>header}}


  <div class="container">


    <div class="card o-hidden border-0 shadow-lg mt-3">
      <div class="card-body p-0 ">
        <!-- Nested Row within Card Body -->
        <div class="row justify-content-center">
          

         {{#if (equal mensaje "Usuario no encontrado")}}
                <div class="container p-4">
                    <div class="row">
                        <div class="col-md-4 mx-auto">
                          <div class="alert alert-danger" role="alert">
                                Usuario no encontrado
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
          {{/if}}  


           {{#if (equal mensaje "Contraseña no es correcta")}}
                <div class="container p-4">
                    <div class="row">
                        <div class="col-md-4 mx-auto">
                          <div class="alert alert-danger" role="alert">
                                Contraseña no es correcta
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
          {{/if}}      

          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Bienvenido</h1>
                {{!-- <h4 class="h6 text-gray-900 mb-4">A continuación registre la información del nuevo curso</h4> --}}
              </div>
              <form action="/login" method="POST" >

                <div class="form-group row">
                  <div class="col-sm-12 mb-6 mb-sm-0">
                  
                    <input type="number" min="1" class="form-control form-control-user" id="documento" name='documento' placeholder="Documento de identificación" required>
                  </div>
                </div>  
                 <div class="form-group row">
                   <div class="col-sm-12 mb-6 mb-sm-0">
                    <input type="password" class="form-control form-control-user" id="contrasena" name="contrasena" placeholder="Contraseña" required>
                  </div>                  
               </div>
               
                <button class="btn btn-primary btn-user btn-block">
                  Iniciar sesión
                </button>
                <hr>
               
              </form>
             
              
            </div>
          </div>

        </div>
      </div>
    </div>


  </div>





{{>footer}}

